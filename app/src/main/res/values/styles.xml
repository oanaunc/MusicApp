<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/genre</item>
        <item name="colorPrimaryDark">@color/artists</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Text view style -->

    <style name="TextView_style" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/buttonPadding</item>
    </style>


    <!-- Image view style -->

    <style name="ImageView_style" >
        <item name="android:layout_height">@dimen/heightImage</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/logo</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- List view style -->

    <style name="ListView_style" >
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/listVerticalPadding</item>
        <item name="android:paddingLeft">@dimen/listVerticalPadding</item>
        <item name="android:paddingRight">@dimen/listVerticalPadding</item>
        <item name="android:paddingTop">@dimen/listVerticalPadding</item>
    </style>

    <!-- Grid view style -->

    <style name="GridView_style" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:verticalSpacing">@dimen/gridSpacing</item>
        <item name="android:horizontalSpacing">@dimen/gridSpacing</item>
        <item name="android:layout_margin">@dimen/gridSpacing</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <!-- LinearLayout style -->


    <style name="linearView_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>



</resources>
